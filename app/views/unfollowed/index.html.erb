
<h1>Unfollowed Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @unfollowed_users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Follow', follows_path(user), method: :POST %></td>
      </tr>
    <% end %>
  </tbody>
</table>

