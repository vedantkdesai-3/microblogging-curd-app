<h1>My Followers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <!--<th>Following user</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @follows.each do |follow| %>
      <tr>
        <td><%= follow.user_id %></td>
        <!-- <td><%= follow.following_user_id %></td> -->
        <td><%= link_to 'View', 'users/1' %></td>
        <!-- <td><%= link_to 'Edit', edit_follow_path(follow) %></td> -->
        <td><%= link_to 'Unfollow', follow, method: :delete, data: { confirm: 'Are you sure that do you want to unfollow ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

